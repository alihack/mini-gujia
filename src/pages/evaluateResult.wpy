			<view class="border"></view>
			<text>我是有底线的</text>
			<view class="border"></view>
		</view>
	</view>
</template>

<script>
import wepy from 'wepy'
import api from '../utils/api'
import {getUserInfo} from '../utils/util'
export default class Index extends wepy.page {
config = {
	navigationBarTitleText: '房牛估价',
	navigationBarBackgroundColor: '#2d8cf0',
	navigationBarTextStyle: 'white',
	backgroundColor: '#2d8cf0',
}
components = {
}

data = {
	currentData: {},
	hasPhone: false,
	coordArry: [],
}

computed = {
}
onPullDownRefresh () {
    wx.stopPullDownRefresh()
}
onShareAppMessage(res) {
    return {
      title: '我的房子值多少钱',
      path: '/pages/index'
    }
  }
async onLoad() {
	// 获取前一页面数据
	const pages = getCurrentPages()
	const prevPage = pages[pages.length - 2]
	this.currentData = prevPage.data.currentData
	// 小区名字过长省略
	if (this.currentData.community_name.length > 9) this.currentData.community_name = this.currentData.community_name.slice(0, 9) + '...'
	await this.methods.getTrend()
}
onShow() {
	if (wepy.$instance.globalData.myUserInfo.mobile) this.hasPhone = true
	if (wx.getStorageSync('isSubscribe')) this.currentData.subscribe = '1'
	wx.removeStorageSync('isSubscribe')
	if (wx.getStorageSync('isSupply')) this.currentData.jsondata = '1'
	wx.removeStorageSync('isSupply')
	this.$apply()
}
methods = {
	getTrend: async () => {
		return new Promise(async resolve => {
			const {data} = await wepy.request({
				url: api['getTrend'],
				data: {
					city_id: this.currentData.city_id,
					project_id: this.currentData.project_id,
					unit_price: this.currentData.unit_price,
					total_price: this.currentData.total_price,
					property_type_code: this.currentData.property_type_code
				}
			})
			if (data.ratio) {
				this.currentData.ratio = data.ratio
				data.DataList.forEach(ele => {
					ele.AppraiseTime = ele.AppraiseTime.slice(ele.AppraiseTime.length - 2)
					if (ele.AppraiseTime[0] == '0') ele.AppraiseTime = ele.AppraiseTime.slice(1)
					ele.AppraiseTime += '月'
					ele.Price = parseInt(ele.Price)
				})
				this.currentData.historyData = data.DataList
				this.methods.drawCanvas()
			}
			resolve()
			this.$apply()
		})
	},
	goSupply () {
		wepy.navigateTo({url: `supplyInfo?id=${this.currentData.id}`})
	},
	async getPhoneNumber (type, {detail}) {
		console.log(detail)
		if (!detail.iv) {
			console.log('用户取消授权')
			wx.navigateTo({url: `loginByPhone?type=${type}`})
			return
		}
		const res = await wepy.request({
			url: api['getUserMobile'],
			data: {
				uid: wepy.$instance.globalData.myUserInfo.uid,
				encryptedData: detail.encryptedData,
				iv: detail.iv
			}
		})
		if (res.code != 400) {
			if (type == 'mark') {
				this.methods.toSubscirbe()
			} else {
				wx.showToast({title: '登录成功'})
				this.hasPhone = true
				await getUserInfo()
			}
		} else {
			wx.showToast({
				title: '请求失败',
				icon: 'none'
			})
		}
		this.$apply()
	},
	touchCanvas({changedTouches}) {
		const coord = changedTouches[0]
		const ctx = wx.createCanvasContext('myCanvas2')
		const ratio = wx.getSystemInfoSync().windowWidth / 375
		ctx.clearRect(0, 0, 382 * ratio, 227 * ratio)
		let isFirst = false
		let result = {}
		this.coordArry.map((ele, index) => {
			if ((coord.y >= ele.y - 20) && (coord.y <= ele.y + 20) && (coord.x >= ele.x - 20) && (coord.x <= ele.x + 20)) {
				if (index == 0) isFirst = true
				result = ele
			}
		})
		if (!result.x) return
		ctx.setFillStyle('#6db6ff')
		ctx.setFontSize(12)
		ctx.arc(result.x, result.y, 4, 0, 2 * Math.PI)
		if (isFirst) {
			ctx.fillText(`${result.price}`, result.x + 5, result.y - 5)
		} else {
			ctx.fillText(`${result.price}`, result.x - 15, result.y - 8)
		}
		ctx.fill()
		ctx.draw()
	},
	drawCanvas: () => {
		console.log('draw')
		// 适配机型
		const ratio = wx.getSystemInfoSync().windowWidth / 375
		// 取价格最大值及最小值
		const priceArry = []
		const historyData = this.currentData.historyData
		console.log(historyData)
		historyData.forEach((ele) => {
			priceArry.push(ele.Price)
		})
		priceArry.sort()
		const minPrice = priceArry[0]
		const maxPrice = priceArry[priceArry.length - 1]
		// 将价格最高及最低分成4段
		const sectionPrice = (maxPrice - minPrice) / 4
		const ctx = wx.createCanvasContext('myCanvas1')
		ctx.save()
		// 绘制X轴实线及月份
		ctx.beginPath()
		ctx.setFontSize(12)
		ctx.setFillStyle('#cccccc')
		ctx.setStrokeStyle('#cccccc')
		ctx.moveTo(38 * ratio, 150 * ratio)
		ctx.lineTo(340 * ratio, 150 * ratio)
		historyData.forEach((ele, index) => {
			ctx.fillText(ele.AppraiseTime, (40 + index * 55) * ratio, 170 * ratio)
		})
		ctx.stroke()
		// 绘制X轴虚线
		ctx.beginPath()
		ctx.stroke()
		ctx.setLineDash([4, 1])
		for (let i = 0; i <= 3; i++) {
			ctx.moveTo(38 * ratio, (30 + 30 * i) * ratio)
			ctx.lineTo(340 * ratio, (30 + 30 * i) * ratio)
		}
		ctx.stroke()
		// Y轴文字
		ctx.setFontSize(12)
		ctx.fillText('单位：元/㎡', 0, 13 * ratio)
		for (let i = 0; i <= 4; i++) {
			ctx.fillText(`${parseInt(maxPrice - sectionPrice * i)}`, 0, (34 + 30 * i) * ratio)
		}
		// 绘制小圆点并连线
		ctx.restore()
			// 计算价格坐标
		const pxPrice = sectionPrice / 30   // 1px的价格
		const coordArry = []
		historyData.forEach((ele, index) => {
			coordArry.push({x: (50 + index * 55) * ratio, y: ((maxPrice - ele.Price) / pxPrice + 30) * ratio, price: ele.Price})
		})
		this.coordArry = coordArry
		console.log('坐标', coordArry)
		ctx.setFillStyle('#6db6ff')
		coordArry.forEach(ele => {
			ctx.beginPath()
			ctx.arc(ele.x, ele.y, 2, 0, 2 * Math.PI)
			ctx.fill()
		})
		ctx.beginPath()
		for (let i = 0; i < coordArry.length - 1; i++) {
			ctx.moveTo(coordArry[i].x, coordArry[i].y)
			ctx.lineTo(coordArry[i + 1].x, coordArry[i + 1].y)
		}
		ctx.setStrokeStyle('#6db6ff')
		ctx.stroke()
		ctx.draw()
		// 默认最后一个为点击状态
		const ctx2 = wx.createCanvasContext('myCanvas2')
		const lastCoord = coordArry[coordArry.length - 1]
		ctx2.arc(lastCoord.x, lastCoord.y, 4, 0, 2 * Math.PI)
		ctx2.setFillStyle('#6db6ff')
		ctx2.fillText(lastCoord.price, lastCoord.x - 15, lastCoord.y - 8)
		ctx.setFontSize(12)
		ctx2.fill()
		ctx2.draw()
		this.$apply()
	},
	toSubscirbe: async () => {
		await wepy.request({
			url: api['isSubscribe'],
			data: {
				uid: wepy.$instance.globalData.myUserInfo.uid,
				id: this.currentData.id
			}
		})
		wepy.navigateTo({url: 'loginSuccess'})
	}
}

events = {
}
}
</script>
