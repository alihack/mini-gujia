<template>
	<view class="container">
		<view class="header">
			<view class="room">
				<view class="text">{{currentData.community_name}} -{{currentData.house_type}}-{{currentData.acreage}}m<text class="sup-text">2</text></view>
				<button class="share" open-type="share" plain><image src="../images/share.png"></image></button>
			</view>
			<view class="price">
				<text class="number">{{currentData.total_price}}</text>
				<text class="unit">万</text>
			</view>
			<view class="supply" @tap="goSupply" wx:if="{{!currentData.jsondata}}"><text>点击补充楼房信息 估值更精准</text><image src="../images/write.png"></image></view>
			<view class="supply" wx:else><text>信息已补充</text><image src="../images/write.png"></image></view>
			<view class="detail">
				<view class="detail-left">
					<view class="title">房屋评估单价</view>
					<view class="count">{{currentData.unit_price}}元 /m<text class="sup-text">2</text></view>
				</view>
				<view class="detail-center">
					<view class="title">环比上月变化</view>
					<view class="count" wx:if="{{currentData.ratio}}">{{currentData.ratio}}</view>
					<view class="count" wx:else>暂无环比</view>
				</view>
				<view class="detail-right">
					<view class="title">估值参考范围</view>
					<view class="count">{{currentData.price_range}}</view>
				</view>
			</view>
			<button class="button" wx:if="{{currentData.subscribe == '1'}}">已订阅楼盘价格波动</button>
			<button class="button" wx:elif="{{currentData.subscribe == '0' && hasPhone}}" @tap="toSubscirbe">订阅楼盘价格波动</button>
			<button class="button" wx:else open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber('mark')">订阅楼盘价格波动</button>
		</view>
		<view class="main">
			<view class="title">该楼盘历史均价走势图</view>
			<canvas wx:if="{{currentData.historyData}}" class ="canvas1" canvas-id="myCanvas1" bindtouchstart="touchCanvas">
				<canvas class ="canvas2" canvas-id="myCanvas2"></canvas>
			</canvas>
			<view class="no-data" wx:else>
				<image src="../images/no-data.png"></image>
				<text>暂无历史走势</text>
			</view>
		</view>
		<view class="footer">
			<view class="title">房源分析</view>
			<view class="box">
				<view class="box-left">
					<view class="room">{{currentData.sourceAnalyze[0].txt1}}</view>
					<view class="area">{{currentData.sourceAnalyze[0].txt2}}<text class="sup-text">2</text></view>
				</view>
				<view class="box-right">
					<text>{{currentData.sourceAnalyze[0].content}}</text>
				</view>
			</view>
			<view wx:if="{{hasPhone && index != 0}}" class="box" wx:for="{{currentData.sourceAnalyze}}" wx:key="index">
				<view class="box-left">
					<view class="room">{{item.txt1}}</view>
					<view class="area">{{item.txt2}}</view>
				</view>
				<view class="box-right">
					<text>{{item.content}}</text>
				</view>
			</view>
			<button wx:if="{{!hasPhone}}" class="button" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber('source')">登录查看更多房源分析</button>
		</view>
